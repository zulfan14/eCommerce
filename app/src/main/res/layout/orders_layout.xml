<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@color/colorBlue"
        >

        <TextView
            android:id="@+id/orders_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Nama Pengguna"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/orders_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/orders_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total HArga"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/orders_user_name"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/orders_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat dan Kota "
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/orders_total_price"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/orders_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal dan waktu "
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/orders_address_city"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/show_all_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/orders_date_time"
            android:layout_margin="20dp"
            android:text="Tampilkan Detail Pesanan"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            />

    </RelativeLayout>


</RelativeLayout>